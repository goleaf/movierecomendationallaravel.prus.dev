APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=failover
QUEUE_FAILOVER_CONNECTIONS=database,sync

GOOGLE_AUTH_TYPE=service_account
GOOGLE_CREDENTIALS=
SEARCH_CONSOLE_APPLICATION_NAME="MovieRec Search Console"

CACHE_STORE=database
# CACHE_PREFIX=

# SSR metrics configuration
SSR_METRICS=true
# Primary persistence layer: database, jsonl, or both
SSR_METRICS_STORAGE=database
# Days to retain SSR samples before pruning
SSR_METRICS_RETENTION_DAYS=30
# Filesystem disk used when writing JSONL fallbacks
SSR_METRICS_JSONL_DISK=local
# Path (relative to disk root) for JSONL snapshots
SSR_METRICS_JSONL_PATH=metrics/ssr.jsonl
# Penalty applied when SSR responses timeout
SSR_METRICS_PENALTY_TIMEOUT=25
# Penalty applied when SSR responses fail with errors
SSR_METRICS_PENALTY_ERROR=50
# Penalty applied when time-to-first-byte is slow
SSR_METRICS_PENALTY_SLOW_FIRST_BYTE=10
# Penalty applied when JSON-LD metadata is missing
SSR_METRICS_PENALTY_MISSING_JSON_LD=5
# Penalty applied when Open Graph metadata is missing
SSR_METRICS_PENALTY_MISSING_OPEN_GRAPH=5
# Penalty applied for excessive blocking scripts
SSR_METRICS_PENALTY_BLOCKING_SCRIPTS=3
# Penalty applied when HTML payloads are heavy
SSR_METRICS_PENALTY_HEAVY_HTML=2

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Recommendation weights
REC_A_POP=0.55
REC_A_RECENT=0.20
REC_A_PREF=0.25
REC_B_POP=0.35
REC_B_RECENT=0.15
REC_B_PREF=0.50
REC_EXPERIMENT_SEED=
REC_AB_SPLIT=50,50

# TMDB configuration
TMDB_API_KEY=
TMDB_BASE_URL=https://api.themoviedb.org/3/
TMDB_CACHE_TTL=3600
TMDB_TIMEOUT=10
TMDB_RETRY_ATTEMPTS=2
TMDB_RETRY_DELAY_MS=250
TMDB_BACKOFF_MULTIPLIER=2
TMDB_BACKOFF_MAX_DELAY_MS=2000
TMDB_RATE_LIMIT_WINDOW=10
TMDB_RATE_LIMIT_ALLOWANCE=35
TMDB_ACCEPTED_LOCALES=en-US,pt-BR
TMDB_DEFAULT_LOCALE=en-US

# OMDb configuration
OMDB_API_KEY=
OMDB_BASE_URL=https://www.omdbapi.com/
OMDB_TIMEOUT=10
OMDB_RETRY_ATTEMPTS=1
OMDB_RETRY_DELAY_MS=300
OMDB_BACKOFF_MULTIPLIER=2
OMDB_BACKOFF_MAX_DELAY_MS=1200
OMDB_RATE_LIMIT_WINDOW=1
OMDB_RATE_LIMIT_ALLOWANCE=5
OMDB_DEFAULT_FORMAT=json
OMDB_DEFAULT_PLOT=short
